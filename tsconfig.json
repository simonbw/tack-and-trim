{
  "compilerOptions": {
    // Module stuff
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "esModuleInterop": true,

    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "react",
    "lib": ["ES2023", "dom"],
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6"
  }
}
